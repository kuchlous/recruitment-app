<%= form_for(@designation, :url =>  url_for(:host => APP_CONFIG['host_name'], :controller => "designations", :action => (button_tag == "Update" ? "update" : "create"))) do |f| %>
  <table id="designation_form_table">
    <tr>
      <td> Designation Name </td>
      <td> <%= f.text_field :name %> </td>
    </tr>
    <tr>
      <td class="designation_submit_button" colspan="2">
        <%= f.submit("#{button_tag}") %>
      </td>
    </tr>
  </table>
<% end %>
