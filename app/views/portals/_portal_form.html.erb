  <table id="portal_form_table">
    <tr>
      <td> Portal Name </td>
      <td> <%= f.text_field :name %> </td>
    </tr>
    <tr>
      <td class="portal_submit_button" colspan="2">
        <%= f.submit("#{button_tag}") %>
      </td>
    </tr>
  </table>
<% end %>
